<%- include('../partials/header') %>
<section class="show">
<h2>Book Details</h2>
<tbody>
    <%= book.title %><br>
    <%= book.authors %><br>
    <%= book.subtitle %><br>
    <%= book.description %><br>
    <%= book.categories %><br>
    <%= book.averageRating %><br>
    <% if (book.image) { %>
      <img src="<%= book.image %>" alt="">
    <% } %>
</tbody>

<div class="rating">
<form action="/books/<%= book._id %>/reviews" method="POST">
  <h2>Reviews</h2>
  <div class="input-box">
    <input type="text" placeholder="Tell is what you think?..."
    required>
    </div><br>
    <br><br><label>&nbsp;&nbsp;Rating:</label>
    <select name="rating">
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
    <option value="4">4</option>
    <option value="5" selected>5</option>
  </select><br><br><br>
  <button type="submit" class="submit">Add Review</button>
</form>
</div>

<% if (book.reviews.length) { %>
  <table>
    <thead>
      <tr>
        <th>Content</th>
        <th>User</th>
        <th>Rating</th>
      </tr>
    </thead>

    <tbody>
      <% book.reviews.forEach(function(r) { %>
        <tr>
          <td><%= r.content %></td>
          <td><%= r.user %></td>
          <td><%= r.rating %></td>
          <td><% if (user && r.user.equals(user._id)) { %>
          <a href="/books/<%= book._id %>/reviews/<%= r._id %>/edit">Edit</a>
         <% } %></td>
        </tr>
      </tbody>
    </table>
     
    
    <form action="/books/<%= book._id %>/reviews/<%= r._id %>?_method=DELETE" method="POST">
      <input type="hidden" name="_method" value="DELETE">
      <button type="submit">Remove</button>
    </form>

<% }); %>
    
<% } else { %>
  <h5>No Reviews Yet</h5>
<% } %>
</section>
<%- include('../partials/footer') %>